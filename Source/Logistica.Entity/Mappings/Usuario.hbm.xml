<?xml version="1.0" encoding="utf-8" ?>
  <hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
    <class name="Logistica.Entity.Usuario, Logistica.Entity" table="Usuario" lazy="false"> 
      <id name="Id" column="UsuarioId" type="System.Int64" unsaved-value="0" >
        <generator class="native" />
      </id>
      <property name="Mail" column="Mail" type="System.String" length="400" />
      <property name="Password" column="Password" type="System.String" length="200" />
      <property name="UltimoLogin" column="UltimoLogin" type="System.DateTime" />
      <many-to-one name="TipoUsuario" column="TipoUsuarioId" cascade="none" class="Logistica.Entity.TipoUsuario, Logistica.Entity" />
      <one-to-one name="DatosPersona" class="Logistica.Entity.DatosPersona, Logistica.Entity" cascade="all"/>
    </class>
  </hibernate-mapping>
